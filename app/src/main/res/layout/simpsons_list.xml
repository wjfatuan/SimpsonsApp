<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/simpsonIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bart"
        android:contentDescription="simpson name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/simpsonName"/>

    <TextView
        android:id="@+id/simpsonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simpsonIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>